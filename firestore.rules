rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection: users can read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Sessions collection: users can read/write sessions where uid matches their auth uid
    match /sessions/{sessionId} {
      allow read, write: if request.auth != null && resource.data.uid == request.auth.uid;
    }

    // emotionData collection: users can read/write emotion data where uid matches
    match /emotionData/{emotionId} {
      allow read, write: if request.auth != null && resource.data.uid == request.auth.uid;
    }

    // progress collection: users can read/write their own progress document
    match /progress/{progressId} {
      allow read, write: if request.auth != null && request.auth.uid == progressId;
    }
  }
}
